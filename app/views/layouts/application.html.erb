<!DOCTYPE html>
<html>
  <head>
    <title>Dnd</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render "layouts/navbar" %>
      <% if controller_name == 'characters' %>
            <%= form_with(url: search_characters_path, method: :get, local: true) do %>
        <div class="field is-ground mb-5">
          <div class="control is-expanded">
            <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search For Character') %>
          </div>
          <div class="control">
            <%=submit_tag("Search", class: "button is-primary")%>
          </div>
        </div>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
